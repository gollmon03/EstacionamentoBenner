@{
    Layout = "~/Views/Shared/_Empty.cshtml";
}
<style>
    body {
        background-color: #fff;
        -webkit-font-smoothing: antialiased;
        font: normal 14px Roboto,arial,sans-serif;
    }

    .container {
        position: absolute;
    }

    .form-login {
        background-color: #EDEDED;
        padding-top: 10px;
        padding-bottom: 20px;
        padding-left: 20px;
        padding-right: 20px;
        border-radius: 15px;
        border-color: #d2d2d2;
        border-width: 5px;
        box-shadow: 0 1px 0 #cfcfcf;
    }

    h4 {
        border: 0 solid #fff;
        border-bottom-width: 1px;
        padding-bottom: 10px;
        text-align: center;
    }

    .form-control {
        border-radius: 10px;
    }

    .wrapper {
        text-align: center;
    }

    #login {
        margin-top: 0px;
        left: 50%;
        top: 50%;
        transform: translate(-168px, -120px);
    }
        #login > div > div > div {
            box-shadow: 5px 7px 20px 3px black
        }
            #login > div > div > div > form > div.wrapper > span > button {
                margin-top: 10px;
                width: 100%;
            }
</style>

<div id="login" class="container">
    <div class="row">
        <div class="col-md-offset-5 col-md-3">
            <div class="form-login">
                <form action="/Login/Index" method="post">
                    @Html.AntiForgeryToken()

                    <h4>Indentifique-se.</h4>
                    @Html.ValidationSummary()
                    <input type="text" id="userName" for="login" name="login" class="form-control input-sm chat-input" placeholder="username" />

                    <input type="password" id="userPassword" for="senha" name="senha" class="form-control input-sm chat-input" placeholder="password" />

                    <div class="wrapper">
                        <span class="group-btn">
                            <button type="submit" class="btn btn-primary btn-md">login <i class="fa fa-sign-in"></i></button>
                        </span>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
