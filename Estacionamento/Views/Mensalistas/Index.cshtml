@model IEnumerable<Estacionamento.Models.Mensalista>

@{
    ViewBag.Title = "Index";
}

<h2>Mensalistas</h2>

<p>
    @Html.ActionLink("Novo Mensalista", "Create" , null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pessoa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModeloVeiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlacaVeiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorMensal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pessoa.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModeloVeiculo.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlacaVeiculo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorMensal)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" }) 
        </td>
    </tr>
}

</table>
