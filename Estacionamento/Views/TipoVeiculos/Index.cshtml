@model IEnumerable<Estacionamento.Models.TipoVeiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Tipo de Veiculos</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus"></i>
        Novo Usuário
    </a>
</p>

<table class="table">
    <tr>
        <th>
            Tipo Veiculo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            <a class="btn btn-primary btn-sm texto-branco" href="@Url.Action("Edit", new { id = item.Id } )">
                <i class="fas fa-edit"></i>
                Editar
            </a> |

            <a class="btn btn-info btn-sm texto-branco" href="@Url.Action("Details", new { id = item.Id } )">
                <i class="fas fa-info-circle"></i>
                Detalhes
            </a> |

            <a class="btn btn-danger btn-sm texto-branco" href="@Url.Action("Delete", new { id = item.Id } )">
                <i class="fas fa-trash"></i>
                Deletar
            </a>
        </td>
    </tr>
}

</table>
