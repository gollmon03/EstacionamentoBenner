@model IEnumerable<Estacionamento.Models.TabelaPreco>

@{
    ViewBag.Title = "Index";
}

<h2>Tabela de Preços</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus"></i>
        Novo Preço
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Tipo Veiculo
            </th>
            <th>
                Valor Hora
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoVeiculo.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorHora)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm texto-branco" href="@Url.Action("Edit", new { id = item.Id } )">
                        <i class="fas fa-edit"></i>
                        Editar
                    </a> |

                    <a class="btn btn-info btn-sm texto-branco" href="@Url.Action("Details", new { id = item.Id } )">
                        <i class="fas fa-info-circle"></i>
                        Detalhes
                    </a> |

                    <a class="btn btn-danger btn-sm texto-branco" href="@Url.Action("Delete", new { id = item.Id } )">
                        <i class="fas fa-trash"></i>
                        Deletar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
