@model IEnumerable<Estacionamento.Models.Vaga>

@{
    ViewBag.Title = "Index";
}

<h2>Vagas</h2>

<br />

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus"></i>
        Nova Vaga
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Setor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Situacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Setor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>
            <td>
                <a class="btn btn-primary btn-sm texto-branco" href="@Url.Action("Edit", new { id = item.Id } )">
                    <i class="fas fa-edit"></i>
                    Editar
                </a> |

                <a class="btn btn-info btn-sm texto-branco" href="@Url.Action("Details", new { id = item.Id } )">
                    <i class="fas fa-info-circle"></i>
                    Detalhes
                </a> |

                <a class="btn btn-danger btn-sm texto-branco" href="@Url.Action("Delete", new { id = item.Id } )">
                    <i class="fas fa-trash"></i>
                    Deletar
                </a>
            </td>
        </tr>
    }

</table>
