@model IEnumerable<Estacionamento.Models.MovimentacaoVeiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Movimentação de Veiculos</h2>
<br />

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">
        <i class="fas fa-plus"></i>
        Nova Movimentação
    </a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataHoraEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataHoraSaida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlacaVeiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vaga.Setor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vaga)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraSaida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlacaVeiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vaga.Setor.Sigla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vaga.Numero)
            </td>
            <td>
                <a class="btn btn-info btn-sm texto-branco" href="@Url.Action("Details", new { id = item.Id })">
                    <i class="fas fa-info-circle"></i>
                    Detalhes
                </a> |

                <a class="btn btn-danger btn-sm texto-branco" href="@Url.Action("Delete", new { id = item.Id })">
                    <i class="fas fa-trash"></i>
                    Deletar
                </a> |

                @if (item.DataHoraSaida == null)
                {
                    <a class="btn btn-success btn-sm texto-branco" href="@Url.Action("FinalizarMovimentacao", new { id = item.Id } )">
                        <i class="fas fa-check"></i>
                        Finalizar Movimentação
                    </a>
                }
            </td>
        </tr>
    }

</table>
