@model IEnumerable<Estacionamento.Models.MovimentacaoVeiculo>

@{
    ViewBag.Title = "Index";
}

<h2>Movimentação de Veiculos</h2>

<p>
    @Html.ActionLink("Nova Movimentação", "Create", null, new { @class = "btn btn-success" } )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataHoraEntrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataHoraSaida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlacaVeiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vaga.Setor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vaga)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DataHoraEntrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataHoraSaida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlacaVeiculo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vaga.Setor.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vaga.Numero)
        </td>
        <td>
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" }) |
            @Html.ActionLink("Finalizar Movimentação", "FinalizarMovimentacao", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
        </td>
    </tr>
}

</table>
